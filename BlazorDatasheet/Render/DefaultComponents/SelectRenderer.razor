@namespace BlazorDatasheet.Render.DefaultComponents
@using BlazorDatasheet.Core.Edit
@inherits BaseRenderer

<div
    class="sheet-select-render"
    style="display: flex; 
        flex-direction: row;
        width:100%; 
        height: 100%;">
    <div style="overflow: hidden; text-align: inherit; flex-shrink: 0; flex-grow: 1;">
        @(Cell.Value?.ToString())
    </div>
    <div style="margin-right: 0; width: 16px;">
        <CaretButton OnPress="@BeginEdit"/>
    </div>
</div>

@code {

    private void BeginEdit()
    {
        Sheet.Editor.BeginEdit(Cell.Row, Cell.Col, true, EditEntryMode.Mouse);
    }

}